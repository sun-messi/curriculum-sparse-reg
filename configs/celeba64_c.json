// Mode C: Curriculum Only (UNet) - 64x64
//
// Usage:
//   Single GPU:
//     python train_curriculum.py --config-path configs/celeba64_c.json
//
//   Multi-GPU (6 GPUs):
//     python train_curriculum.py --config-path configs/celeba64_c.json --num-gpus 6 --distributed --rigid-launch
//
//   Select specific GPUs (0,1,3,5):
//     CUDA_VISIBLE_DEVICES=0,1,3,5 python train_curriculum.py --config-path configs/celeba64_c.json --num-gpus 4 --distributed --rigid-launch
//
//   Using torchrun (elastic launch):
//     torchrun --standalone --nproc_per_node 4 train_curriculum.py --config-path configs/celeba64_c.json --distributed
//
// 10-Stage Curriculum (Logarithmic division):
//   High noise region [0.2, 1.0]: 3 stages, coarse structure
//   Low noise region [0.0, 0.2]: 7 stages, fine details (finer near t=0)
//
//   Stage | t_min | epochs | 说明
//   ------|-------|--------|------
//     0   |  0.5  |   1    | 粗糙结构
//     1   |  0.3  |   1    |
//     2   |  0.2  |   1    | ← 高噪区结束
//     3   | 0.15  |   1    | 开始细节
//     4   |  0.1  |   1    |
//     5   | 0.07  |   2    |
//     6   | 0.05  |   2    |
//     7   | 0.03  |   2    |
//     8   | 0.01  |   2    |
//     9   |  0.0  |   2    | 最精细
//
{
  "dataset": "celeba",
  "diffusion": {
    "timesteps": 1000,
    "beta_start": 0.0001,
    "beta_end": 0.02,
    "beta_schedule": "linear",
    "model_mean_type": "eps",
    "model_var_type": "fixed-small",
    "loss_type": "mse"
  },
  "model": {
    "in_channels": 3,
    "hid_channels": 128,
    "ch_multipliers": [1, 2, 2, 2],
    "num_res_blocks": 2,
    "apply_attn": [false, false, true, false],
    "drop_rate": 0.0
  },

  "train": {
    "lr": 2e-5,
    "batch_size": 128,
    "grad_norm": 1.0,
    "epochs": 100,
    "warmup": 5000,
    "use_ema": true,
    "ema_decay": 0.9999,
    "num_samples": 12,
    "image_intv": 1,
    "chkpt_intv": 1
  },
  "curriculum": {
    "enabled": true,
    "stages": [
      {"t_min": 0.3,  "t_max": 1.0, "epochs": 1, "name": "stage1_coarse"},
      {"t_min": 0.2,  "t_max": 1.0, "epochs": 1, "name": "stage2_coarse"},
      {"t_min": 0.15, "t_max": 1.0, "epochs": 1, "name": "stage3_detail"},
      {"t_min": 0.1,  "t_max": 1.0, "epochs": 1, "name": "stage4_detail"},
      {"t_min": 0.07, "t_max": 1.0, "epochs": 1, "name": "stage5_fine"},
      {"t_min": 0.05, "t_max": 1.0, "epochs": 1, "name": "stage6_fine"},
      {"t_min": 0.03, "t_max": 1.0, "epochs": 1, "name": "stage7_finer"},
      {"t_min": 0.01, "t_max": 1.0, "epochs": 1, "name": "stage8_finer"},
      {"t_min": 0.0,  "t_max": 1.0, "epochs": 12, "name": "stage9_finest"}
    ]
  },
  "sparsity": {
    "enabled": false,
    "initial_sparsity": 0.8,
    "regrowth_method": "gradient"
  },
  "regularization": {
    "enabled": false,
    "lambda_max": 0.00003
  }
}
