// Mode CS: Curriculum + Sparsity (SparseUNet with hard mask at bottleneck) - 32x32
//
// Usage:
//   Single GPU:
//     python train_curriculum.py --config-path configs/celeba32_cs.json
//
//   Multi-GPU (6 GPUs):
//     python train_curriculum.py --config-path configs/celeba32_cs.json --num-gpus 6 --distributed --rigid-launch
//
// 10-Stage Sparsity Schedule (non-linear decay):
//   High noise [0.2, 1.0]: Keep 80% sparsity (coarse features don't need capacity)
//   Low noise [0.0, 0.2]: Rapid release (fine details need more channels)
//
//   Stage | t_min | sparsity | epochs | 说明
//   ------|-------|----------|--------|------
//     0   |  0.5  |   80%    |   1    | 粗糙结构
//     1   |  0.3  |   80%    |   1    |
//     2   |  0.2  |   80%    |   1    | ← 高噪区结束
//     3   | 0.15  |   70%    |   1    | 开始释放
//     4   |  0.1  |   60%    |   1    |
//     5   | 0.07  |   50%    |   2    |
//     6   | 0.05  |   40%    |   2    |
//     7   | 0.03  |   25%    |   2    |
//     8   | 0.01  |   10%    |   2    |
//     9   |  0.0  |    0%    |   2    | 全开
//
{
  "dataset": "celeba32",
  "diffusion": {
    "timesteps": 1000,
    "beta_start": 0.0001,
    "beta_end": 0.02,
    "beta_schedule": "linear",
    "model_mean_type": "eps",
    "model_var_type": "fixed-small",
    "loss_type": "mse"
  },
  "model": {
    "in_channels": 3,
    "hid_channels": 32,
    "ch_multipliers": [1, 2, 2, 2],
    "num_res_blocks": 2,
    "apply_attn": [false, false, false, false],
    "drop_rate": 0.0
  },
  "train": {
    "lr": 2e-4,
    "batch_size": 256,
    "grad_norm": 1.0,
    "epochs": 100,
    "warmup": 5000,
    "use_ema": true,
    "ema_decay": 0.9999,
    "num_samples": 12,
    "image_intv": 1
  },
  "curriculum": {
    "enabled": true,
    "stages": [
      {"t_min": 0.2,  "t_max": 1.0, "epochs": 1, "sparsity": 0.8,  "name": "stage0_coarse"},
      {"t_min": 0.15, "t_max": 1.0, "epochs": 1, "sparsity": 0.7,  "name": "stage3_detail"},
      {"t_min": 0.1,  "t_max": 1.0, "epochs": 1, "sparsity": 0.6,  "name": "stage4_detail"},
      {"t_min": 0.07, "t_max": 1.0, "epochs": 2, "sparsity": 0.5,  "name": "stage5_fine"},
      {"t_min": 0.05, "t_max": 1.0, "epochs": 2, "sparsity": 0.4,  "name": "stage6_fine"},
      {"t_min": 0.03, "t_max": 1.0, "epochs": 2, "sparsity": 0.2, "name": "stage7_finer"},
      {"t_min": 0.01, "t_max": 1.0, "epochs": 2, "sparsity": 0.1,  "name": "stage8_finer"},
      {"t_min": 0.0,  "t_max": 1.0, "epochs": 4, "sparsity": 0.0,  "name": "stage9_finest"}
    ]
  },
  "sparsity": {
    "enabled": true,
    "initial_sparsity": 0.8,
    "regrowth_method": "gradient"
  },
  "regularization": {
    "enabled": false,
    "lambda_max": 0.00003
  }
}
